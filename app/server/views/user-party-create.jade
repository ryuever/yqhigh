extends party-scratch-layout

block party-scratch
    form(role='form' class="form-horizontal" id="create-party-form")
        fieldset
            .form-group
                label(for='party-des' class="col-sm-10 party-label") 添加描述创建一个新的聚餐
            hr
            
            .form-group
                label(for='party-des' class="control-label col-sm-2 party-label") 主题
                .col-sm-4
                    input(class='form-control' id='party-des')
                    
            .form-group
                label(for='party-des' class="control-label col-sm-2 party-label") 时间
                .col-sm-4
                    input(class='form-control' id='party-time')                
    
            
            .form-group    
                label(for='checkboxes' class="control-label col-sm-2 party-label") 菜单                    
                .col-sm-4
                    .checkbox
                        label(for='checkboxes-0' class='party-label')
                            input(type="checkbox" name="checkboxes" id="huoguo" value="huoguo")
                            | 火锅
    
                    .checkbox
                        label(for='checkboxes-1' class='party-label')
                            input(type="checkbox" name="checkboxes" id="kaorou" value="kaorou")
                            | 烤肉
                            
                    .checkbox
                        label(for='checkboxes-2' class='party-label')
                            input(type="checkbox" name="checkboxes" id="jiaozi" value="jiaozi")
                            | 饺子                         
    include modals/huoguo                            
    include modals/kaorou
    include modals/jiaozi                            